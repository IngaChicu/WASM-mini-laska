{
  "scripts": {
    "dev": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",

    "build": "nwbuild --platforms win32 --buildDir build/ src/",
    "compile": "wa compile -o src/gui/script/binary/laska.wasm -i code/lib/util/list.c -i code/lib/board.c -i code/lib/control.c -i code/lib/brain.c -i code/lib/game.c code/link.c",
    "test": "gcc -ansi -pedantic -o out/test.exe -Wall code/lib/util/list.c code/lib/board.c code/lib/control.c code/lib/brain.c code/lib/game.c code/main.c"
  },
  "name": "mini-laska",
  "version": "0.2.0",
  "main": "src/index.js",
  "author": "Vettori Massimo",
  "license": "BSD-2-Clause",
  "private": false,
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mini_laska"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "webassembly": "^0.11.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "11.0.3"
  }
}
